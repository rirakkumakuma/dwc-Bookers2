 <%= render 'books/list',books: @books %>
 <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
      <tbody>
        <tr><td><%= link_to attachment_image_tag(@user, :profile_image, :fill,60,60,fallback: "no_image.jpg"),user_path(@user.id)%></td>
        <td><%= link_to @book.title,book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td>
         <% if @book.user == current_user %>
         <%= link_to "Edit",edit_book_path(@book),class: 'btn btn-sm btn-success edit_book_26880' %>
         <%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？",class: 'btn btn-sm btn-danger destroy_book_26880' %>
         <% end %>
        </td>
      </tbody>
     </table>
    </div>
   </div>
 </main>